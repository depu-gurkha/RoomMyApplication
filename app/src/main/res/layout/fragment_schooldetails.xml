<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway"
            android:text="NEW SCHOOL"
            android:textSize="30sp"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lSname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/sName"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableStart="@drawable/ic_baseline_school_24"
                    android:drawableLeft="@drawable/ic_baseline_school_24"
                    android:drawablePadding="12dp"
                    android:hint="School Name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColorHint="@color/blue_gray"
                    android:textSize="14sp"
                    app:boxStrokeColor="@color/black"
                    app:boxStrokeWidth="10dp"
                    app:boxStrokeWidthFocused="10dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/black"
                    app:hintTextColor="@color/black"
                    app:startIconTint="@color/black">

                </EditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lSaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:hintEnabled="false"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/sAddress"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/white"
                    android:drawableStart="@drawable/ic_baseline_add_location_24"
                    android:drawableLeft="@drawable/ic_baseline_add_location_24"
                    android:drawablePadding="12dp"
                    android:hint="School Address"
                    android:inputType="textMultiLine|text"
                    android:padding="10dp"
                    android:textColorHint="@color/blue_gray"
                    android:textSize="14sp"
                    app:boxStrokeColor="@color/black"
                    app:boxStrokeWidth="10dp"
                    app:boxStrokeWidthFocused="10dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/black"
                    app:hintTextColor="@color/black"
                    app:startIconTint="@color/black">

                </EditText>

            </com.google.android.material.textfield.TextInputLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textborder"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:paddingLeft="13dp">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="24dp"
                    android:src="@drawable/email"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_weight="2">
                </ImageView>

                <Spinner
                    android:id="@+id/spDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@null"
                    android:entries="@array/District"
                    android:paddingLeft="2dp"
                    android:spinnerMode="dialog"
                    android:textSize="1sp"
                    />
                <ImageView
                    android:id="@+id/iv_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_error_outline_24"
                    android:paddingRight="13dp"
                    android:visibility="invisible"
                    android:layout_gravity="center">
                </ImageView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:paddingTop="1dp"
                android:text="Hello"
                android:textSize="13dp"
                android:textFontWeight="200"
                android:textColor="#B00020"
                android:visibility="gone">

            </TextView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lSpincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:hintEnabled="false"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/sPincode"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableStart="@drawable/ic_baseline_location_city_24"
                    android:drawableLeft="@drawable/ic_baseline_location_city_24"
                    android:drawablePadding="12dp"
                    android:hint="Pincode"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="10dp"
                    android:textColorHint="@color/blue_gray"
                    android:textSize="14sp"
                    app:boxStrokeColor="@color/black"
                    app:boxStrokeWidth="10dp"
                    app:boxStrokeWidthFocused="10dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/black"
                    app:hintTextColor="@color/black"
                    app:startIconTint="@color/black">

                </EditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lSemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:hintEnabled="false"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/sEmail"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableStart="@drawable/email"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="12dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColorHint="@color/blue_gray"
                    android:textSize="14sp"
                    app:boxStrokeColor="@color/black"
                    app:boxStrokeWidth="10dp"
                    app:boxStrokeWidthFocused="10dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/black"
                    app:hintTextColor="@color/blue_gray"
                    app:startIconTint="@color/black">

                </EditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lSphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:hintEnabled="false"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/sPhone"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableStart="@drawable/phone"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="12dp"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:textColorHint="@color/blue_gray"
                    android:textSize="14sp"
                    app:boxStrokeColor="@color/black"
                    app:boxStrokeWidth="10dp"
                    app:boxStrokeWidthFocused="10dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/black"
                    app:hintTextColor="@color/black"
                    app:startIconTint="@color/black">

                </EditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lSwebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:hintEnabled="false"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/sWebsite"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableStart="@drawable/ic_baseline_web_24"
                    android:drawableLeft="@drawable/ic_baseline_web_24"
                    android:drawablePadding="12dp"
                    android:hint="Website"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColorHint="@color/blue_gray"
                    android:textSize="14sp"
                    app:boxStrokeColor="@color/black"
                    app:boxStrokeWidth="10dp"
                    app:boxStrokeWidthFocused="10dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/black"
                    app:hintTextColor="@color/black"
                    app:startIconTint="@color/black">

                </EditText>

            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textborder"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="24dp"
                    android:src="@drawable/email"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_weight="2">
                </ImageView>
                <Spinner
                    android:id="@+id/spType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/Type"
                    android:paddingLeft="2dp"
                    android:layout_weight="7"
                    android:spinnerMode="dialog"
                    android:background="@null"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_error_outline_24"
                    android:paddingRight="13dp"
                    android:visibility="invisible"
                    android:layout_gravity="center">
                </ImageView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:visibility="gone"
                android:layout_marginLeft="13dp"
                android:paddingTop="1dp"
                android:textSize="13dp"
                android:textFontWeight="200"
                android:textColor="#B00020"
                >

            </TextView>


            <Button
                android:id="@+id/btn_signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/cutsom_button"
                android:fontFamily="@font/raleway"
                android:text="Create your account"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:backgroundTint="#314879" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>